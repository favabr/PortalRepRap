<script>
    $(document).ready(function () {
        $('#slider').nivoSlider({
            effect: 'boxRandom',
            pauseTime: 4000,
            animspeed: 500,
            pauseOnHover: true,
            captionOpacity: 1,
            afterLoad: function () { $('#slider .nivo-caption p').css("left", "15px") },
            beforeChange: function () { $('#slider .nivo-caption p').css("left", "-500px") },
            afterChange: function () { $('#slider .nivo-caption p').css("left", "15px") }
        });
    });
</script>

